  # scripts/config --disable CONFIG_SECURITY_TOMOYO_INSECURE_BUILTIN_SETTING
  # # Apparmor
  # scripts/config --enable CONFIG_SECURITY_APPARMOR
  # scripts/config --enable CONFIG_SECURITY_APPARMOR_HASH
